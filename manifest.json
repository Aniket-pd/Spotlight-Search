{
  "manifest_version": 3,
  "name": "Spotlight for Chrome",
  "description": "Spotlight-style universal search overlay for tabs, bookmarks, and history.",
  "version": "0.1.0",
  "permissions": ["tabs", "bookmarks", "history", "storage", "scripting"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "commands": {
    "open-launcher": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "Command+K"
      },
      "description": "Open Spotlight overlay"
    },
    "open-launcher-alt": {
      "suggested_key": {
        "default": "Alt+Space"
      },
      "description": "Open Spotlight overlay (alternate)"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Spotlight for Chrome"
  }
}
